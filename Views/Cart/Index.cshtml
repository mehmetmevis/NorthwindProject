@model CartListViewModel

<h2>Sepetiniz</h2>
@if (Model.Cart.CartLines.Count == 0)
{
    <h2 class="badge badge-danger">Sepetinizde ürün bulunmamaktadır.</h2>
}
else
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Ürün Adı</th>
                <th>Açıklama</th>
                <th>Birim Fiyatı</th>
                <th>Stok Miktarı</th>
                <th>Satış Adedi</th>
            </tr>
        </thead>
        @foreach (var cartLine in Model.Cart.CartLines)
        {
            <tbody>
                <tr>
                    <td>@cartLine.Product.ProductId</td>
                    <td>@cartLine.Product.ProductName</td>
                    <td>@cartLine.Product.QuantityPerUnit</td>
                    <td>@cartLine.Product.UnitPrice</td>
                    <td>@cartLine.Product.UnitsInStock</td>
                    <td>@cartLine.Quantity</td>
                    <td><a class="btn btn-sm btn-danger" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-productId="@cartLine.Product.ProductId">Ürünü Sil</a></td>
                </tr>
            </tbody>

        }
    </table>
}